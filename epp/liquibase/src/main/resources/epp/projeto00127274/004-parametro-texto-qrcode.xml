<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="nextValueForSqParametro" value="nextval('sq_tb_parametro')" dbms="postgresql" />
    <property name="nextValueForSqParametro" value="sq_tb_parametro.nextval" dbms="oracle" />
    <property name="nextValueForSqParametro" value="next value for sq_tb_parametro" dbms="mssql" />

    <changeSet author="marcone" id="1" dbms="mssql, postgresql, oracle">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                select count(*) from tb_parametro where nm_variavel = 'textoRodapeDocumento'
            </sqlCheck>
        </preConditions>
        <insert tableName="tb_parametro">
            <column name="id_parametro" valueComputed="${nextValueForSqParametro}" />
            <column name="nm_variavel" value="textoRodapeDocumento" />
            <column name="vl_variavel" value="Documento assinado eletronicamente por ${assinadores}, conforme art3º, VI, b, do Decreto 6.768/2018 de 03/10/2018 da Prefeitura Municipal de Cuiabá." />
            <column name="ds_variavel" value="Texto do rodapé do documento" />
            <column name="in_sistema" valueBoolean="false" />
            <column name="in_ativo" valueBoolean="true" />
        </insert>
    </changeSet>
</databaseChangeLog>
